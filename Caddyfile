:3000 {
    root * /srv
    
    # Proxy /api requests to the backend
    handle_path /api/* {
        reverse_proxy {$VITE_API_BASE_URL} {
            header_up Host {upstream_hostport}
        }
    }
    
    # Handle all other requests
    handle {
        try_files {path} /index.html
        file_server
    }
    
    log {
        output stdout
    }
}
